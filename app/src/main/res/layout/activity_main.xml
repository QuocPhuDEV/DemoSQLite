<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical"
    android:scaleType="fitXY"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="CUSTOMER SERVEY APPLICATON"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCustomerServey"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="btnCustomerServey"
            android:padding="5dp"
            android:text="Tiến Hành Khảo Sát" />

        <Button
            android:id="@+id/btnScan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="btnScanQRCode"
            android:padding="5dp"
            android:text="Scan Khách Hàng" />

        <Button
            android:id="@+id/btnHistoryServey"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Lịch sử khảo sát" />

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/Nav_Bottom"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="#FFFFFF"
        app:menu="@menu/nav_bottom_items">

    </android.support.design.widget.BottomNavigationView>

</LinearLayout>